{% extends 'frontbase.html.twig' %}

{% block title %} İletişim {{ data[0].title }} {% endblock %}
{% block keywords %} {{ data[0].keywords }} {% endblock %}
{% block description %} {{ data[0].description }} {% endblock %}
{% block sidebar %} {{ include('home/_sidebar.html.twig') }} {% endblock %}

{% block styles %}
    <link rel="stylesheet" type="text/css" href="{{ asset('home/') }}styles/contact_styles.css">
    <link rel="stylesheet" type="text/css" href="{{ asset('home/') }}styles/contact_responsive.css">
{% endblock %}

{% block content %}
    <!-- Contact Info -->

    <div class="contact_info">
        <div class="container">
            <h3>{{ data[0].contact|raw }}</h3>
            <div class="row">
                <div class="col-lg-10 offset-lg-1">
                    <div class="contact_info_container d-flex flex-lg-row flex-column justify-content-between align-items-between">

                        <!-- Contact Item -->
                        <div class="contact_info_item d-flex flex-row align-items-center justify-content-start">
                            <div class="contact_info_image"><img src="images/contact_1.png" alt=""></div>
                            <div class="contact_info_content">
                                <div class="contact_info_title">Telefon</div>
                                <div class="contact_info_text">{{ data[0].phone }}</div>
                            </div>
                        </div>

                        <!-- Contact Item -->
                        <div class="contact_info_item d-flex flex-row align-items-center justify-content-start">
                            <div class="contact_info_image"><img src="images/contact_2.png" alt=""></div>
                            <div class="contact_info_content">
                                <div class="contact_info_title">Email</div>
                                <div class="contact_info_text">{{ data[0].smtpemail }}</div>
                            </div>
                        </div>

                        <!-- Contact Item -->
                        <div class="contact_info_item d-flex flex-row align-items-center justify-content-start">
                            <div class="contact_info_image"><img src="images/contact_3.png" alt=""></div>
                            <div class="contact_info_content">
                                <div class="contact_info_title">Adres</div>
                                <div class="contact_info_text">{{ data[0].address }}</div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- Contact Form -->

    <div class="contact_form">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 offset-lg-1">
                    <div class="contact_form_container">
                        <div class="contact_form_title">Bize Ulaşın</div>

                        {{ include('home/messages.html.twig') }}

                        <form action="#" id="contact_form" name="massages" method="post">
                            <div class="contact_form_inputs d-flex flex-md-row flex-column justify-content-between align-items-between">
                                <input type="text" name="messages[name]" class="contact_form_name input_field form-control" placeholder="İsminiz" required="required" data-error="Name is required.">
                                <input type="email" name="messages[email]" class="contact_form_email input_field form-control" placeholder="Email adresi" required="required" data-error="Email is required.">
                                <input type="text" name="messages[subject]" class="contact_form_phone input_field form-control" placeholder="Konuyu giriniz">
                            </div>
                            <div class="contact_form_text">
                                <textarea id="contact_form_messages" class="text_field contact_form_message form-control" name="messages[message]" rows="4" placeholder="Message" required="required" data-error="Please, write us a message."></textarea>
                            </div>
                            <div class="contact_form_button">
                                <input type="hidden" name="token" value="{{ csrf_token('form-message') }}" />
                                <input type="submit" class="button contact_submit_button" value="Mesajı Gönder">
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
        <div class="panel"></div>
    </div>

    <!-- Map -->

    <div class="contact_map">
        <div id="google_map" class="google_map">
            <div class="map_container">
                <div id="map"></div>
            </div>
        </div>
    </div>


{% endblock %}

{% block javascripts %}
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyCIwF204lFZg1y4kPSIhKaHEXMLYxxuMhA"></script>
    <script src="{{ asset('home/') }}js/contact_custom.js"></script>
{% endblock %}