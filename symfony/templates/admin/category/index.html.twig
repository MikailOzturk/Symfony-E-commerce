{% extends 'adminbase.html.twig' %}

{% block title %}Kategori Listesi{% endblock %}

{% block content %}

    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <h1>
                    KATEGORİ LİSTESİ

                </h1>

            </div>
        </div>
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">

                        <small><a href="{{ path('admin_category_new') }}" class="btn btn-primary waves-effect" >Kategori Ekleme</a> </small>



                    </div>
                    <div class="body table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Parentid</th>
                                <th>Title</th>
                                <th>Keywords</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Göster</th>
                                <th>Düzenle</th>
                                <th>Sil</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for category in categories %}
                                <tr>
                                    <td>{{ category.id }}</td>
                                    <td>{{ category.parentid }}</td>
                                    <td>{{ category.title }}</td>
                                    <td>{{ category.keywords }}</td>
                                    <td>{{ category.description }}</td>
                                    <td>{{ category.status }}</td>
                                    <td>
                                        <a href="{{ path('admin_category_show', {'id': category.id}) }}" class="btn btn-success waves-effect">Göster</a>
                                    </td>
                                    <td>
                                        <a href="{{ path('admin_category_edit', {'id': category.id, 'pid': category.parentid}) }}" class="btn btn-success waves-effect">Düzenle</a>
                                    </td>
                                    <td>
                                        {{ include('admin/category/_delete_form.html.twig') }}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>


                    </div>
                </div>
            </div>
        </div>

    </section>
{% endblock %}
