{% extends 'adminbase.html.twig' %}

{% block title %}Ürün Listesi{% endblock %}

{% block content %}

    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <h1>
                    ÜRÜN LİSTESİ

                </h1>

            </div>
        </div>
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">

                        <small><a href="{{ path('admin_product_new') }}" class="btn btn-primary waves-effect" >Ürün Ekleme</a> </small>



                    </div>
                    <div class="body table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Title</th>
                                <th>Amount</th>
                                <th>Price</th>
                                <th>Sprice</th>
                                <th>Min</th>
                                <th>Image</th>
                                <th>Gallery</th>
                                <th>Category_id</th>

                                <th>Status</th>

                                <th>Göster</th>
                                <th>Düzenle</th>
                                <th>Sil</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for product in products %}
                                <tr>
                                    <td>{{ product.id }}</td>
                                    <td>{{ product.title }}</td>
                                    <td>{{ product.amount }}</td>
                                    <td>{{ product.price }}</td>
                                    <td>{{ product.sprice }}</td>
                                    <td>{{ product.min }}</td>

                                    <td>
                                        <a href="javascript:openWin('{{ path('admin_product_iedit', {'id': product.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=100,left=200,menuBar=no,scrollBars=no,resizable=no,width=600,height=500');">
                                            {% if product.image ==null %}
                                                <img src="{{ asset('admin') }}/img/image.png" height="32">
                                            {% else %}
                                                <img src="{{ asset('uploads') }}/images/{{ product.image }}" height="40">

                                            {% endif %}
                                        </a>
                                    </td>
                                    <td>
                                        <a href="javascript:openWin('{{ path('admin_image_new', {'pid': product.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=100,left=200,menuBar=no,scrollBars=no,resizable=no,width=1000,height=800');">
                                            <img src="{{ asset('admin') }}/img/gallery.png" height="32">
                                        </a>
                                    </td>

                                    <td>{{ product.categoryId }}</td>

                                    <td>{{ product.status }}</td>
                                    <td>
                                        <a href="{{ path('admin_product_show', {'id': product.id}) }}" class="btn btn-success waves-effect">Göster</a>
                                    </td>
                                    <td>
                                        <a href="{{ path('admin_product_edit', {'id': product.id}) }}" class="btn btn-success waves-effect">Düzenle</a>
                                    </td>
                                    <td>
                                        {{ include('admin/product/_delete_form.html.twig') }}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="18">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                        <a href="{{ path('admin_product_new') }}">Create new</a>
                    </div>
                </div>
            </div>
        </div>

    </section>
{% endblock %}
