{% extends 'adminbase.html.twig' %}

{% block title %}Siparişler{% endblock %}

{% block content %}

    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <h1>
                    Siparişler

                </h1>

            </div>
        </div>
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">

                    <div class="body table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Userid</th>
                                <th>Amount</th>
                                <th>Name</th>
                                <th>Address</th>
                                <th>City</th>
                                <th>Phone</th>

                                <th>Status</th>
                                <th>Note</th>
                                <th>actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for order in orders %}
                                <tr>
                                    <td>{{ order.id }}</td>
                                    <td>{{ order.userid }}</td>
                                    <td>{{ order.amount }}</td>
                                    <td>{{ order.name }}</td>
                                    <td>{{ order.address }}</td>
                                    <td>{{ order.city }}</td>
                                    <td>{{ order.phone }}</td>

                                    <td>{{ order.status }}</td>
                                    <td>{{ order.note }}</td>
                                    <td>
                                        <a href="javascript:openWin('{{ path('admin_orders_show', {'id': order.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=100,left=200,menuBar=no,scrollBars=no,resizable=no,width=1000,height=800');">
                                            show
                                        </a>


                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="11">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>



                    </div>
                </div>
            </div>
        </div>

    </section>
{% endblock %}
